@model List<ProjectSWT.EF.Specialization>
@{
    var category = (ProjectSWT.EF.CateSpecialization)ViewBag.Cate;
    ViewBag.Title = category.Name;
    Layout = "~/Views/Shared/_SonLayout.cshtml";
}

<!-- Page info -->
<div class="page-info-section set-bg" data-setbg="/Assets/Client/img/page-bg/2.jpg">
    <div class="container">
        <div class="site-breadcrumb">
            <a href="/Home/Index">Home</a>
            <span>@category.Name</span>
        </div>
    </div>
</div>
<!-- Page info end -->
<!-- single course section -->
<section class="single-course spad pb-0">
    <div class="container">
        <div class="course-meta-area">
            <div class="row">
                <div class="col-lg-10 offset-lg-1">
                    <div class="course-note">Chuyên ngành nổi bật</div>
                    <h3>@category.Name</h3>
                    <div class="course-metas">
                        <div class="course-meta">
                            <div class="course-author">
                                <div class="ca-pic set-bg" data-setbg="img/authors/2.jpg"></div>
                                <h6>Được thêm vào ngày</h6>
                                <p>@category.CreateDate</p>
                            </div>
                        </div>
                        <div class="course-meta">
                            <div class="cm-info">
                                <h6>Category</h6>
                                <p></p>
                            </div>
                        </div>
                        <div class="course-meta">
                            <div class="cm-info">
                                <h6>Students</h6>
                                <p>120 Registered Students</p>
                            </div>
                        </div>
                        <div class="course-meta">
                            <div class="cm-info">
                                <h6>Reviews</h6>
                                <p>
                                    10 Đánh giá <span class="rating">
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star"></i>
                                        <i class="fa fa-star is-fade"></i>
                                    </span>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <img src="img/courses/single.jpg" alt="" class="course-preview">
        <div class="row">
            <div class="col-lg-10 offset-lg-1 course-list">
                <div class="cl-item">
                    <h4>Những điều cần biết về chuyên ngành</h4>
                    <p>@category.Description</p>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- single course section end -->
<section class="course-section spad">
    <div class="container">
        <div class="section-title mb-0">
            <h2>Các khóa học liên quan</h2>
        </div>
    </div>
    <div class="course-warp">
        <div class="row course-items-area">
            <!-- course -->
            @foreach (var item in Model)
            {
                    <div class="mix col-lg-3 col-md-4 col-sm-6 finance">
                        <a href="/Specialization/DetailCourse/@item.ID">
                            <div class="course-item">
                                <div class="course-thumb set-bg" data-setbg="@item.Images">
                                    <div class="price">Khóa học nổi bật</div>
                                </div>
                                <div class="course-info">
                                    <div class="course-text">
                                        <h5>@item.Name</h5>
                                        <p>@item.Title</p>
                                        <div class="students">Chi tiết</div>
                                    </div>
                                </div>
                            </div>
                        </a>                       
                    </div>
            }
        </div>
    </div>
</section>
<!-- course section end -->
<!-- banner section -->
<section class="banner-section spad">
    <div class="container">
        <div class="section-title mb-0 pb-2">
            <h2>Đăng ký tư vấn ngay hôm nay!</h2>
            <p>Nếu bạn đã sẵn sàng để thực hiện ước mơ của mình thì đừng ngần ngại liện hệ với chúng tôi, đội ngủ tư vấn sẽ sớm hồi đáp bạn.</p>
        </div>
        <div class="text-center pt-5">
            <a href="#" class="site-btn">Đăng ký tư vấn ngay</a>
        </div>
    </div>
</section>
<!-- banner section end -->
